@page "/version-test"
@using WebSpark.Bootswatch.Demo.Services
@inject VersionService VersionService
@{
    ViewData["Title"] = "Version Test";
}

<h2>Version Service Test</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Version Information</h5>
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>Version:</strong> @VersionService.Version</li>
            <li class="list-group-item"><strong>Short Version:</strong> @VersionService.ShortVersion</li>
            <li class="list-group-item"><strong>Build Date:</strong> @VersionService.FormattedBuildDate</li>
            <li class="list-group-item"><strong>NuGet URL:</strong> <a href="@VersionService.NuGetPackageUrl" target="_blank">@VersionService.NuGetPackageUrl</a></li>
        </ul>
    </div>
</div>

<div class="mt-3">
    <a asp-page="/Index" class="btn btn-primary">Back to Home</a>
</div>
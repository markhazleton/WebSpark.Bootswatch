    <!-- Grid Alignment -->
    <section class="mb-5">
        <h2 class="border-bottom pb-2 mb-4">Grid Alignment</h2>
        <p>Use flexbox alignment utilities to vertically and horizontally align columns.</p>

        <h4 class="mt-4">Vertical Alignment</h4>
        <div class="row align-items-start bg-light mb-4" style="height: 150px;">
            <div class="col">
                <div class="p-3 bg-primary text-white rounded">align-items-start</div>
            </div>
            <div class="col">
                <div class="p-3 bg-primary text-white rounded">Top aligned</div>
            </div>
            <div class="col">
                <div class="p-3 bg-primary text-white rounded">Column</div>
            </div>
        </div>

        <div class="row align-items-center bg-light mb-4" style="height: 150px;">
            <div class="col">
                <div class="p-3 bg-secondary text-white rounded">align-items-center</div>
            </div>
            <div class="col">
